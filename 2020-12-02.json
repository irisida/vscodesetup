{
  // general settings
  // ****************
  "workbench.colorTheme": "One Dark Pro",
  "workbench.tree.indent": 16,
  "window.zoomLevel": -0.75,
  "files.trimTrailingWhitespace": true,
  // Terminal settings
  // *****************
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
  // workbench customisation
  // ***********************
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "titleBar.activeBackground": "#21252b",
      "activityBar.background": "#21252b",
      "activityBar.border": "#252a30",
      "panel.border": "#2f353c",
      //"sideBar.foreground": "#7d8fa8",
      "sideBar.foreground": "#6d7e94",
      "list.focusForeground": "#95c077",
      "separators.interfaces.borderColor": "#3f4148",
      "separators.methods.borderColor": "#3f4148",
      "separators.functions.borderColor": "#3f4148",
      "separators.constructors.borderColor": "#3f4148"
    },
    "[One Monokai]": {
      "titleBar.activeBackground": "#21252b",
      "activityBar.background": "#21252b",
      "activityBar.border": "#252a30",
      "panel.border": "#333a41",
      "sideBar.foreground": "#7d8fa8",
      "list.focusForeground": "#95c077",
      "separators.interfaces.borderColor": "#3f4148",
      "separators.methods.borderColor": "#3f4148",
      "separators.functions.borderColor": "#3f4148",
      "separators.constructors.borderColor": "#3f4148"
    }
  },
  // golang environment settings
  // ***************************
  "go.autocompleteUnimportedPackages": true,
  "go.lintTool": "golint",
  "go.lintOnSave": "file",
  "go.useLanguageServer": true,
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    // Optional: Disable snippets, as they conflict with completion ranking.
    "editor.snippetSuggestions": "none"
  },
  "[go.mod]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    // Add parameter placeholders when completing a function.
    "usePlaceholders": false,
    // If true, enable additional analyses with staticcheck.
    // Warning: This will significantly increase memory usage.
    "staticcheck": false
  },
  // editor settings
  // ***************
  "editor.lineNumbers": "relative",
  "editor.cursorStyle": "line",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  //"editor.fontFamily": " 'CaskaydiaCove Nerd Font' ,'JetBrains Mono', 'Operator Mono Lig', Menlo, Monaco, monospace",
  "editor.fontFamily": " 'JetBrainsMono Nerd Font', 'Operator Mono Lig', Menlo, Monaco, monospace",
  "editor.fontSize": 13,
  "editor.fontWeight": "300",
  "editor.suggestSelection": "first",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.tokenColorCustomizations": {
    //"comments": "#38444c",
    "textMateRules": [
      {
        "scope": "keyword, keyword.declaration.dart, storage.type, comment",
        "settings": {
          "fontStyle": "italic "
        }
      }
    ]
  },
  // fix the UI nonsense
  "explorer.compactFolders": false
}
